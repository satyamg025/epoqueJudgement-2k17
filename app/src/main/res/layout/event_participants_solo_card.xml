<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:theme="@style/AppTheme.Base"
    app:cardUseCompatPadding="true"
    android:id="@+id/participant_solo_card"
    app:cardBackgroundColor="#3c21c7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participant Name"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/participants_solo"
            android:textColor="@color/white"/>
        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give Judgement"
            android:textColor="#00e5ff"
            android:id="@+id/give_judgement_solo"
            android:layout_gravity="right"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/chipbackground"/>

    </LinearLayout>

</android.support.v7.widget.CardView>


